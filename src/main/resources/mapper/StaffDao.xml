<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nanjolono.demo.dao.StaffDao">
    <resultMap id="baseResult" type="com.nanjolono.demo.dto.StaffDto">
        <id column="name" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
    </resultMap>
    <sql id="baseColumn">
        id,name
    </sql>
    <select id="findById" resultType="com.nanjolono.demo.dto.StaffDto">
        SELECT
            <include refid="baseColumn"/>
        FROM staff WHERE id = #{id}
    </select>
    <insert id="add" parameterType="com.nanjolono.demo.dto.StaffDto">
            INSERT INTO staff (ID,NAME) VALUES (#{id},#{name})
    </insert>
    <select id="list" parameterType="com.nanjolono.demo.dto.StaffDto" resultMap="baseResult">
        select
            <include refid="baseColumn"/>
        from test.staff
        <where>
            <if test="id !=null and id != '' ">
                id = #{id}
            </if>
            <if test="name !=null and name != '' ">
                name = #{name}
            </if>
        </where>
    </select>
    <update id="edit" parameterType="com.nanjolono.demo.dto.StaffDto">
        update test.staff
        set
            name = #{name}
        where
            id = #{id}
    </update>
    <delete id="delete" parameterType="com.nanjolono.demo.dto.StaffDto">
        delete from staff where id = #{id}
    </delete>
</mapper>